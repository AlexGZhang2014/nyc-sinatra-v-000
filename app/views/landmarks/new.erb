<h1>Add a New Historical Landmark</h1>
<form method="POST" action="/landmarks">
  <label for="landmark_name">Name: </label>
  <input type="text" name="landmark[name]" id="landmark_name">
  <label for="landmark_year_completed">Year: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <br><br>
  
  <h3><label>Landmarks</label></h3>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
    <br>
  <% end %>
  <br>
  <h3>Create New Landmark:</h3>
  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  
  <br><br>
  <input type="submit" value="Create New Figure">
</form>